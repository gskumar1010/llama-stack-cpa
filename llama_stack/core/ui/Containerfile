# More info on playground configuration can be found here:
# https://llama-stack.readthedocs.io/en/latest/playground

FROM python:3.12-slim

# Set the working directory
WORKDIR /app

RUN mkdir -p /app/.streamlit

# Optionally, run as a non-root user (for better security)
RUN useradd -m -u 1000 appuser
RUN chown -R appuser:appuser /app

# Copy the requirements file
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt


ENV HOME=/app

COPY . /app/

EXPOSE 8501

# ENTRYPOINT ["streamlit", "run", "app.py", "--server.port=8501", "--server.address=0.0.0.0"]
ENTRYPOINT ["streamlit", "run", "city-permitting-streamlit.py", "--server.port=8501", "--server.address=0.0.0.0"]
